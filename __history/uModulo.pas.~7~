    uqFornecedoresNome: TStringField;
    uqFornecedoresSobrenome: TStringField;
    uqFornecedoreseMail: TStringField;
    uqFornecedoresUsuario: TStringField;
    uqFornecedoresSenha: TStringField;
    uqFornecedoresNivel_usuario: TStringField;
    uqFornecedoresDta_cadastro: TDateTimeField;
